# Makefile for Sphinx documentation

# Variables
SPHINXBUILD = sphinx-build
SOURCEDIR = source
BUILDDIR = build
ALLSPHINXOPTS = -d $(BUILDDIR)/doctrees
HTMLDIR = $(BUILDDIR)/html
PDFDIR = $(BUILDDIR)/pdf
# If the Makefile is not generated by `sphinx-quickstart`, you might need to adjust paths
# and options to fit your Sphinx setup.

.PHONY: help clean html

help:
	@echo "Please use \`make <target>\` where <target> is one of"
	@echo "  html    to make HTML documentation"
	@echo "  clean   to remove all generated files"

clean:
	rm -rf $(BUILDDIR)/*

html:
	$(SPHINXBUILD) -b html $(ALLSPHINXOPTS) $(SOURCEDIR) $(HTMLDIR)

pdf:
	$(SPHINXBUILD) -b pdf $(ALLSPHINXOPTS) $(SOURCEDIR) $(PDFDIR)
